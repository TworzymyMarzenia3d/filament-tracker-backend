// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Prisma odczyta adres bazy z pliku .env
}

// Model definiujący typ filamentu, np. "Fiberlogy PLA Czarny"
model FilamentType {
  id           Int      @id @default(autoincrement())
  manufacturer String   // Producent, np. "Fiberlogy"
  material     String   // Materiał, np. "PLA"
  color        String   // Kolor, np. "Czarny"
  createdAt    DateTime @default(now())

  // To jest relacja: jeden typ filamentu może mieć wiele zakupów
  purchases Purchase[]
}

// Model dla każdego pojedynczego zakupu szpuli (dla logiki FIFO)
model Purchase {
  id             Int      @id @default(autoincrement())
  purchaseDate   DateTime
  initialWeight  Int
  currentWeight  Int
  price          Float    // Cena w oryginalnej walucie
  currency       String   // Oryginalna waluta (PLN, EUR, USD)
  exchangeRate   Float    // Kurs wymiany na PLN z dnia zakupu (dla PLN = 1)
  priceInPLN     Float    // Obliczona cena w PLN (price * exchangeRate)
  costPerGramInPLN Float  // Obliczony koszt za gram w PLN
  filamentType   FilamentType @relation(fields: [filamentTypeId], references: [id])
  filamentTypeId Int
}